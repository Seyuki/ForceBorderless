<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!--All TextBlocks-->
    <Style x:Key="AboutTextBlock" TargetType="{x:Type TextBlock}">
        <Setter Property="Margin" Value="2"/>
        <Setter Property="FontSize" Value="13px"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
    </Style>

    <!--Header-->
    <Style x:Key="Header" TargetType="{x:Type TextBlock}">
        <Setter Property="FontWeight" Value="Medium"/>
        <Setter Property="Background" Value="{DynamicResource AccentColorBrush}"/>
        <Setter Property="Foreground" Value="White"/>
        <Setter Property="Padding" Value="5"/>
        <Setter Property="FontSize" Value="13px"/>
    </Style>

    <!--Title-->
    <Style x:Key="Title" TargetType="{x:Type TextBlock}" BasedOn="{StaticResource AboutTextBlock}">
        <Setter Property="FontWeight" Value="Medium"/>
    </Style>
    <Style x:Key="ClickableTitle" TargetType="{x:Type TextBlock}" BasedOn="{StaticResource Title}">
        <Setter Property="Cursor" Value="Hand"/>
    </Style>

    <!--License-->
    <Style x:Key="License" TargetType="{x:Type TextBlock}" BasedOn="{StaticResource AboutTextBlock}">
        <Setter Property="FontStyle" Value="Italic"/>
    </Style>
</ResourceDictionary>